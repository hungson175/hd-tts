[Unit]
Description=VietVoice TTS Frontend (Next.js)
After=network.target vietvoice-gateway.service

[Service]
Type=simple
User=hungson175
WorkingDirectory=/home/hungson175/dev/ultimate-boss-HD/VietVoice-TTS/frontend
Environment="PATH=/home/hungson175/.nvm/versions/node/v22.17.1/bin:/usr/bin:/bin"
Environment="PORT=3341"
